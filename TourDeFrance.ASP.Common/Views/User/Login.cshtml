@model TourDeFrance.ASP.Common.Models.LoginModel

@{
    string continueUrl = Request.Params["returnUrl"] ?? Url.RouteUrl(new { Controller = "Home", Action = "Index" });
}

@section Title{
    Welcome
}

<div class="row">
    <div class="span5 offset2" style="padding-top: 50px;">
        @using (Html.BeginForm("Login", "User", FormMethod.Post, new {@class = "form-vertical"}))
        {
            @Html.AntiForgeryToken()
            @Html.Hidden("Continue", continueUrl)
            <div class="control-group">
                @Html.LabelFor(x => x.UserName, new {@class = "control-label"})
                <div class="controls">
                    @Html.TextBoxFor(x => x.UserName, new {placeholder = "Username", autocomplete = "off"})<br/>
                    @Html.ValidationMessageFor(x => x.UserName)
                </div>
            </div>
            <div class="control-group">
                @Html.LabelFor(x => x.Password, new {@class = "control-label"})
                <div class="controls">
                    @Html.PasswordFor(x => x.Password, new {placeholder = "Password", autocomplete = "off"})<br/>
                    @Html.ValidationMessageFor(x => x.Password)
                    <label class="checkbox">
                        @Html.CheckBoxFor(x => x.RememberMe) Remember me
                    </label>
                </div>
            </div>
            <div class="control-group">
                <div class="controls">
                    <button type="submit" class="btn btn-primary">Sign in</button>
                </div>
            </div>
        }
    </div>
</div>